<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.swak</groupId>
		<artifactId>swak</artifactId>
		<version>jre11-1.0.0_final</version>
	</parent>
	<artifactId>swak-test</artifactId>
	<dependencies>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-starter</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
		</dependency>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-actuator</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-redis</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-mq</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-metrics</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-http</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-mongodb</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-vertx</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.swak</groupId>
			<artifactId>swak-jdbc</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>${lombok.version}</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.projectlombok</groupId>
				<artifactId>lombok-maven-plugin</artifactId>
				<version>1.18.10.0</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>delombok</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestEntries>
							<Premain-class>com.swak.test.utils.SizeOfObject</Premain-class>
							<Boot-Class-Path></Boot-Class-Path>
							<Can-Redefine-Classes>false</Can-Redefine-Classes>
						</manifestEntries>
						<addMavenDescriptor>false</addMavenDescriptor>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>