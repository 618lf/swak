<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:netty="http://code.swak.com/schema/netty"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
	    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
	    http://code.swak.com/schema/netty http://code.swak.com/schema/netty/netty.xsd"
	default-lazy-init="true">

	<description>Spring Configuration</description>

    <!-- 服务提供 -->
	<context:component-scan base-package="com.tmt.*"/>
	
	<!-- 关键对象 -->
	<bean id="springContextHolder" class="com.swak.common.utils.SpringContextHolder" lazy-init="false"/>
	
	<!-- security -->
	<import resource="classpath:applicationContext-security.xml"/>
	
    <!-- mvc -->
    <import resource="classpath:applicationContext-mvc.xml"/>
    
    <!-- 线程隔离 -->
	<import resource="classpath:applicationContext-pool.xml"/>
    
	<!-- http服务 -->
	<netty:server host="127.0.0.1" port="8080" enableGzip="true" startReport="true">
	    <netty:filter filter-name="securityFilter"/>
		<netty:servlet servlet-name="dispatcherServlet"/>
		<netty:pool pool-name="threadPool"/>
	</netty:server>
	
	<!-- rpc 服务 -->
	<bean class="com.swak.rpc.boot.ClientBooter"></bean>
</beans>