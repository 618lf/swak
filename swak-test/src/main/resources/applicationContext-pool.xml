<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:netty="http://code.swak.com/schema/netty"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
	    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
	    http://code.swak.com/schema/netty http://code.swak.com/schema/netty/netty.xsd"
	default-lazy-init="true">

	<!-- 线程隔离配置 
	     ConfigableThreadPoolFactory： 每一条配置对应一个线程池
	     [EXP]10000:50:500 设置业务模块的期望,
	     [EXP]每秒任务数:任务执行平均时间:最大的等待时间
	-->
	<bean id="threadPool" class="com.swak.http.pool.ConfigableThreadPoolFactory">
		<property name="poolDefinitions">
			<value>
				/admin/system = 2:1:0
				/admin = [EXP]10000:50:500
				DEFAULT = 2:1:60
			</value>
		</property>
	</bean>
</beans>