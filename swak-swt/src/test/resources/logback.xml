<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">

	<!-- 控制台 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>【%logger - %thread】 %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 出错日志 appender -->
	<appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/error/%d{yyyy-MM-dd}.master.log</fileNamePattern>
			<maxHistory>60</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 记录日志 -->
	<appender name="LOGGER" class="com.tmt.manage.logger.LoggerAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
          <pattern>%d{HH:mm:ss} - %msg%n</pattern>
        </layout>
	</appender>
	
	<!-- 访问日志 appender -->
	<appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/access/%d{yyyy-MM-dd-HH-mm}.master.log</fileNamePattern>
			<maxHistory>0</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>

    <!-- 默认是错误级别 -->
	<root level="ERROR">
	    <appender-ref ref="STDOUT"/>
	    <appender-ref ref="ERROR"/>
	</root>
	
	<!-- 访问日志 -->
	<logger name="ACCESS_TRACE" level="info" additivity="false">
		<appender-ref ref="ACCESS"/>
	</logger>
	
	<!-- 常用的应用程序的日志 -->
	<logger name="com.tmt.manage.App" level="INFO">
	    <appender-ref ref="LOGGER"/>
	</logger>
	<logger name="com.swak.Application" level="DEBUG">
	    <appender-ref ref="LOGGER"/>
	</logger>
</configuration>