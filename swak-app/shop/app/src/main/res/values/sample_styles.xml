    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/actionbar_bg</item>
    </style>

    <style name="NoTitleBarNoShowDou" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTitleSize">35dp</item>
        <!-- 去除标题栏下的阴影 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="TransparentTheme" parent="AppBaseTheme">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- Activity透明样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--
             Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used.
        -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!-- ActionBar样式 -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenu</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="NotTransparentTheme" parent="AppBaseTheme">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- Activity不透明样式 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!--
             Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used.
        -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!-- ActionBar样式 -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenu</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- Application TransparentTheme. -->
    <style name="AppNotTransparentTheme" parent="NotTransparentTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenu</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- Application NotTransparentTheme . -->
    <style name="AppTransparentTheme" parent="TransparentTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenu</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- Application NotTransparentTheme . -->
    <style name="AppTransparentNoTitleTheme" parent="TransparentTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenu</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

