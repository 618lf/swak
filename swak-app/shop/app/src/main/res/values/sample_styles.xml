    <!-- 普通tab标签页样式 -->
    <style name="NormalTabStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
