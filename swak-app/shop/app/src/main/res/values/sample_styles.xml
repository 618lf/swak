    <style name="CustomActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubtitle</item>
        <item name="android:selectableItemBackground">@drawable/selector_ad_selectable_bg</item>
        <item name="android:actionButtonStyle">@style/ActionBarActionButtonStyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle</item>
        <item name="android:actionDropDownStyle">@style/ActionBarDropDownNav</item>
        <item name="android:dropDownListViewStyle">@style/ActionBarDropDownListView</item>
    </style>

    <!-- ActionBar菜单文字样式 -->
    <style name="ActionBarMenu" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- ActionBar标题的样式 -->
    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- ActionBar自定义中间标题的样式 -->
    <style name="ActionBarCenterTitle" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ActionBar副标题的样式 -->
    <style name="ActionBarSubtitle" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- ActionBar操作项元素的样式 -->
    <style name="ActionBarActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
    </style>

    <!-- ActionBarTab选项标签的样式 -->
    <style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/anl_selector_actionbar_tab_bg</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
    </style>

    <!-- Tab选项标签字体的样式 -->
    <style name="ActionBarTabTextStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/anl_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- ActionBar下拉导航外部按钮的样式 -->
    <style name="ActionBarDropDownNav" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/anl_selector_actionbar_spinner_bg</item>
        <item name="android:popupBackground">@drawable/anl_actionbar_menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/selector_ad_selectable_bg</item>
    </style>

    <!-- ActionBar下拉导航内部按钮的样式 -->
    <style name="ActionBarDropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selector_ad_selectable_bg</item>
    </style>

    <!-- popupwindow 动画 -->
    <style name="pop_animation">
        <item name="android:windowEnterAnimation">@anim/anl_pop_menu_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/anl_pop_menu_out_anim</item>
    </style>

    <style name="theme_fullScreen">

        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置全屏 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="accountEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/anl_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/anl_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonBarButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 继承 -->
    <style name="accountButtonStyle" parent="@style/buttonBarButtonStyle">
        <item name="android:textColor">@color/anl_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="menuTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="operationBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="menuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="menuItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="menuItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/anl_deepgray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Title" parent="@style/Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Title_Button" parent="@style/Text">
